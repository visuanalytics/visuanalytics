    "corona1": {
      "type": "pillow",
      "path": "corona/Corona_Bundesland.png",
      "overlay": [
        {
          "description": "Überschrift",
          "type": "text",
          "anchor_point": "center",
          "pos_x": 960,
          "pos_y": 20,
          "color": "black",
          "font_size": 110,
          "font": "fonts/Dosis-Bold.ttf",
          "pattern": "{_conf|Bundesland}"
        },
        {
          "description": "Diagram",
          "type": "image",
